<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jaipur" />

        <Switch
            android:id="@+id/reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bengaluru" />
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutJaipur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:useDefaultMargins="true">

        <Button
            android:id="@+id/j1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="book"
            android:tag="Jaipur"
            android:text="6AM-7AM_J"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/j2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="book"
            android:tag="Jaipur"
            android:text="7AM-8AM_J"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/j3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="book"
            android:tag="Jaipur"
            android:text="8AM-9AM_J"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/j4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="book"
            android:tag="Jaipur"
            android:text="5PM-6PM_J"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/j5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="book"
            android:tag="Jaipur"
            android:text="6PM-7PM_J"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/j6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="book"
            android:tag="Jaipur"
            android:text="7PM-8PM_J"
            app:layout_column="1"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutBanglore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:useDefaultMargins="true">

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="book"
            android:tag="Banglore"
            android:text="6AM-7AM_B"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="book"
            android:tag="Banglore"
            android:text="7AM-8AM_B"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="book"
            android:tag="Banglore"
            android:text="8AM-9AM_B"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="book"
            android:tag="Banglore"
            android:text="5PM-6PM_B"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="book"
            android:tag="Banglore"
            android:text="6PM-7PM_B"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="book"
            android:tag="Banglore"
            android:text="7PM-8PM_B"
            app:layout_column="1"
            app:layout_row="2" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>